{
  "id": "devcontainer-feature",
  "version": "1.1.0",
  "name": "Azure Artifacts Credential Provider",
  "documentationURL": "https://github.com/asidlo/credentialprovider-azureartifacts",
  "description": "Installs a silent/headless NuGet credential provider for Azure Artifacts that authenticates without interactive prompts.",
  "options": {},
  "installsAfter": [
    "ghcr.io/devcontainers/features/dotnet",
    "ghcr.io/devcontainers/features/azure-cli",
    "ghcr.io/microsoft/codespace-features/artifacts-helper"
  ],
  "containerEnv": {
    "NUGET_CREDENTIALPROVIDER_SESSIONTOKENCACHE_ENABLED": "true",
    "NUGET_PLUGIN_HANDSHAKE_TIMEOUT_IN_SECONDS": "30",
    "NUGET_PLUGIN_REQUEST_TIMEOUT_IN_SECONDS": "30"
  }
}
